@model List<Notification>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
@{
    int count = 0;
}
<div class="container">
    <br />
    <div class="row">
        <h2>Bildirimler</h2>
    </div>
    <div class="row">
        <a style="height:auto;width:auto" class="btn btn-outline-primary" href="/Admin/Notification/CreateNotification">Yeni Bildirim Ekle</a>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-light rounded h-100 p-4">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Bildirim Adı</th>
                            <th scope="col">Açıklama</th>
                            <th scope="col">Icon</th>
                            <th scope="col">Oluşturulma Tarihi</th>
                            <th scope="col">Durum</th>
                            <th scope="col">Güncelle</th>
                            <th scope="col">Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.NotificationName</td>
                                <td>@item.Description</td>
                                <td><div class="btn @item.IconColor text-white m-md-1"><i class="@item.Icon text-white"></i></div></td>
                                <td>@item.Date</td>
                                <td>
                                    <a href="/Admin/Notification/ChangeIsStatusNotification/@item.Id">
                                        @{
                                            if (item.Status == true)
                                            {
                                                <i style="color:lightskyblue;font-size:12px" class="fas fa-check-circle"> OKUNDU</i>
                                            }
                                            else
                                            {
                                                <i style="color:palevioletred;font-size:12px" class="fas fa-times-circle"> OKUNMADI</i>
                                            }
                                        }
                                    </a>
                                </td>
                                <td><a class="btn btn-outline-success" href="/Admin/Notification/UpdateNotification/@item.Id">Güncelle</a></td>
                                <td><a class="btn btn-outline-danger" href="/Admin/Notification/DeleteNotification/@item.Id">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>