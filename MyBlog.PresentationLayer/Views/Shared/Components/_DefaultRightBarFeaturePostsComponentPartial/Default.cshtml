@model List<FeaturePost>
<div class="sidebar__feature__item">
    <div class="sidebar__item__title">
        <h6>Editörün Seçtikleri</h6>
    </div>
    @foreach (var item in Model)
    {
        <div class="sidebar__feature__item__large set-bg"
             data-setbg="@item.Article.ThumbImageUrl">
            <div class="sidebar__feature__item__large--text">
                <span>@item.Article.Category.CategoryName</span>
                <h5>
                    <a href="/Blog/BlogDetail/@item.ArticleId">@item.Article.Title</a>
                </h5>
            </div>
        </div>
        <div class="sidebar__feature__item__list">
            <div class="sidebar__feature__item__list__single">
                <div class="post__meta">
                    <h4>@item.Article.CreatedDate.ToString("dd")</h4>
                    <span>@item.Article.CreatedDate.ToString("MMM")</span>
                </div>
                <div class="post__text">
                    <span>@item.Article.Category.CategoryName</span>
                    <h5><a href="/Blog/BlogDetail/@item.ArticleId">@item.Article.Title</a></h5>
                </div>
            </div>
        </div>
    }
   
</div>
<div class="sidebar__item__banner">
    <img src="~/foodeiblog-master/img/sidebar/banner.jpg" alt="">
</div>