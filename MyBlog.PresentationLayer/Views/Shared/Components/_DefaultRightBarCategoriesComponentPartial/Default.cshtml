@model List<Category>
<div class="sidebar__item__categories">
    <div class="sidebar__item__title">
        <h6>Kategoriler</h6>
    </div>
    <ul>
        @foreach (var item in Model)
        {
            <li><a href="#">@item.CategoryName<span>@ViewBag.categoryCount</span></a></li>
        }
    </ul>
</div>