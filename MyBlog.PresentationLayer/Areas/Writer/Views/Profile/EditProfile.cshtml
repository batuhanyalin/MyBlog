@model MyBlog.PresentationLayer.Areas.Writer.Models.UserEditViewModel
@{
    ViewData["Title"] = "EditProfile";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}

     <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title">Kullanıcı Profil Sayfası</h3>
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                  <li class="breadcrumb-item active" aria-current="page"> Profilim </li>
                </ol>
              </nav>
            </div>
            <div class="row">
              <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Profil Bilgilerini Güncelleme Paneli</h4>
                    <p class="card-description">Aşağıdaki alanları eksiksiz olarak doldurunuz.</p>
                    @* Burada enctype kullanarak forma dosya (profil fotoğrafı) gönderileceği belirtiliyor. *@
                    <form class="forms-sample" method="post" enctype="multipart/form-data">
                      <div class="form-group">
                        <label>Adınız</label>
                        <input type="text" asp-for=Name class="form-control" />
                      </div>
                      <div class="form-group">
                        <label>Soyadınız</label>
                        <input type="text" asp-for="Surname" class="form-control" />
                      </div>
                       <div class="form-group">
                        <label>Kullanıcı Adınız</label>
                        <input type="text" asp-for="Username" class="form-control" />
                      </div>   
                      <div class="form-group">
                        <label>E-Mail Adresiniz</label>
                        <input type="text" asp-for="Email" class="form-control" />
                      </div>
                       <div class="form-group">
                        <label>Şehir Bilginiz</label>
                        <input type="text" asp-for="City" class="form-control" />
                      </div>
                       <div class="form-group">
                        <label>Fotoğrafınız</label>
                        <input type="file" asp-for="Image" class="form-control" />
                      </div>
                       <div class="form-group">
                        <label>Telefon Numaranız</label>
                        <input type="tel" asp-for="PhoneNumber" class="form-control" />
                      </div>
                      <div class="form-group">
                        <label>Şifreniz</label>
                        <input type="password" asp-for="Password" class="form-control" />
                      </div>
                      <button type="submit" class="btn btn-success mr-2"> Bilgileri Güncelle </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div
        </div>