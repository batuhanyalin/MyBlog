@model Category
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <form asp-action="UpdateCategory" asp-controller="Category" asp-area="Admin" method="post">
        <br />
        <h1 class="mb-4">Kategori Güncelleme Sayfası</h1>
        <div class="row">
            <div class="col-sm-6 col-xl-6">
                <div class="bg-light rounded h-100 p-4">
                    <div class="mb-3">
                        <input type="hidden" asp-for="CategoryId" />
                        <label class="form-label">Kategori Adı</label>
                        <input type="text" class="form-control" asp-for="CategoryName">
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-success" type="submit">Güncelle</button>
                        <label class="form-label">Kategoriye Ait Blog Sayısı: @ViewBag.articleCount </label>
                    </div>
                </div>
            </div>
        </div>
        <br />
    </form>
</div>
