@model List<MyBlog.EntityLayer.Concrete.Comment>
<div class="single-post__comment">
    <div class="widget__title">


        <h4>@Model.Count() Yorum</h4>
    </div>
    @foreach (var item in Model)
    {
        <div class="single-post__comment__item">
            <div class="single-post__comment__item__pic">
                <img src="~/foodeiblog-master/img/categories/single-post/comment/comment-1.jpg" alt="">
            </div>
            <div class="single-post__comment__item__text">
                <h5>@item.Article.AppUser.Name @item.Article.AppUser.Surname</h5>
                <span>@item.CreatedDate.ToString("dd MMM yyyy")</span>
                <p>
                    @item.Description
                </p>
            </div>
        </div>
    }

</div>