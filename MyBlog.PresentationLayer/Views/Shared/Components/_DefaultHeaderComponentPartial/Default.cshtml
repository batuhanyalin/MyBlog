@model List<Category>
<header class="header">
    <div class="header__top">
        <div class="container">
            <div class="row">
                <div class="col-lg-2 col-md-1 col-6 order-md-1 order-1">
                    <div class="header__humberger">
                        <i class="fa fa-bars humberger__open"></i>
                    </div>
                </div>
                <div class="col-lg-8 col-md-10 order-md-2 order-3">
                    <nav class="header__menu">
                        <ul>
                            <li><a href="/Default/Index">Anasayfa</a></li>
                            <li class="dropdown">
                                <a href="#">Kategoriler</a>
                                <ul class="dropdown__menu">
                                    @foreach (var item in Model)
                                    {
                                        <li><a href="/Blog/BlogListForCategory/@item.CategoryId">@item.CategoryName</a></li>
                                    }
                                </ul>
                            </li>
                            <li><a href="/Author/Index">Yazarlar</a></li>
                            <li><a href="/About/Index">Hakkımızda</a></li>
                            <li><a href="/Contact/Index">İletişim</a></li>
                            <li><a href="/Login/Index">Giriş Yap</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-2 col-md-1 col-6 order-md-3 order-2">
                    <div class="header__search">
                        <i class="fa fa-search search-switch"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3">
                <div class="header__btn">
                    <a href="/Register/Index" class="primary-btn">Üye Ol</a>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="header__logo">
                    <a href="/Default/Index"><img height="60" width="248" src="~/images/logo.png" alt=""></a>
                </div>
            </div>
            @await Component.InvokeAsync("_DefaultHeaderSocialMediaComponentPartial")
        </div>
    </div>
</header>
