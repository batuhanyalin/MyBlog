@model List<MyBlog.EntityLayer.Concrete.Category>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Anasayfa</title>
</head>
<body>
    <div class="container">
        <br />
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>Kategori Adı</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                    <td><a class="btn btn-danger-outline" href="/Category/CategoryDelete/@item.CategoryId">Sil</a></td>
                    <td><a clas="btn btn-success-outline" href="/Category/CategoryUpdate/@item.CategoryId">Güncelle</a>@item.CategoryName</td>
                </tr>
            }
        </table>
        <a href="/Category/CategoryCreate" class="btn btn-success-primary">Yeni Kategori Girişi</a>
    </div>
</body>
</html>
