@model CreateCommentBlogViewModel
<div class="single-post__leave__comment">
    <div class="widget__title">
        <h4>Bir Yorum Yap</h4>
    </div>
    <form asp-controller="Blog" asp-action="CreateBlogComment" method="post">
        <div class="input-list">
            <input type="hidden" asp-for=ArticleId>
            <input type="text" asp-for=Name placeholder="İsim">
            <input type="text" asp-for=Surname placeholder="Soyisim">
            <input type="text" asp-for="Email" placeholder="E-posta">
        </div>
        <textarea asp-for=Description placeholder="Mesajınız"></textarea>
        <br />
        <button type="submit" class="site-btn">Gönder</button>
    </form>
</div>