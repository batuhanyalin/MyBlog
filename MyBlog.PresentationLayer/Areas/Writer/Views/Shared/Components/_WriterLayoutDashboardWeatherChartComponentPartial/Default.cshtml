@model MyBlog.PresentationLayer.Areas.Writer.Models.WeatherForecastViewModel

<div class="col-xl-8 grid-margin stretch-card">
    <div class="card card-calender">
        <div class="card-body">
            <div class="row pt-4">
                <div class="col-sm-6">
                    <h1 class="text-white">@DateTime.Now.ToString("HH:mm")</h1>
                    <h5 class="text-white">@DateTime.Now.ToString("dddd, dd MMMM yyyy")</h5>
                    <h5 class="text-white pt-2 m-0">Nem: @Model.Forecasts.FirstOrDefault()?.Humidity %</h5>
                    <h5 class="text-white m-0">Rüzgar: @Model.Forecasts.FirstOrDefault()?.WindSpeed m/s</h5>
                </div>
                <div class="col-sm-6 text-sm-right pt-3 pt-sm-0">
                    <h3 class="text-white">@Model.Forecasts.FirstOrDefault()?.Weather</h3>
                    <p class="text-white m-0">@Model.City, @Model.Country</p>
                    <h3 class="text-white m-0">@Model.Forecasts.FirstOrDefault()?.Temperature °C</h3>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-sm-12">
                    <h4 class="text-white">Günlük Hava Durumu</h4>
                    <ul class="d-flex pl-0 overflow-auto">
                        @foreach (var dailyForecast in Model.Forecasts.GroupBy(f => f.Date.Date).Take(7))
                        {
                            var firstForecast = dailyForecast.First();
                            <li class="weakly-weather-item text-white font-weight-medium text-center">
                                <p class="mb-0">@firstForecast.Date.ToString("dddd")</p>
                                <img src="@($"http://openweathermap.org/img/w/{firstForecast.WeatherIcon}.png")" alt="@firstForecast.Weather" />
                                <p class="mb-0">@firstForecast.Temperature<span class="symbol">°C</span></p>
                            </li>
                        }
                    </ul>

                    <h4 class="text-white mt-5">Saatlik Hava Durumu</h4>
                    <ul class="d-flex pl-0 overflow-auto">
                        @foreach (var hourlyForecast in Model.Forecasts.Take(24))
                        {
                            <li class="weakly-weather-item text-white font-weight-medium text-center">
                                <p class="mb-0">@hourlyForecast.Date.ToString("HH:mm")</p>
                                <img src="@($"http://openweathermap.org/img/w/{hourlyForecast.WeatherIcon}.png")" alt="@hourlyForecast.Weather" />
                                <p class="mb-0">@hourlyForecast.Temperature<span class="symbol">°C</span></p>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
