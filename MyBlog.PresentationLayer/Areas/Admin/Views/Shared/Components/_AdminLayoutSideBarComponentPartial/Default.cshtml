@model AppUser
<div class="sidebar pe-4 pb-3">
    <nav class="navbar bg-light navbar-light">
        <a href="/Admin/Dashboard/Index" class="navbar-brand mx-4 mb-3">
            <h3 class="text-primary"><i class="fas fa-user-shield"></i> Admin Paneli</h3>
        </a>
        <div class="d-flex align-items-center ms-4 mb-4">
            <div class="position-relative">
                <img class="rounded-circle" src="@Model.ImageUrl" alt="" style="width: 40px; height: 40px;">
                <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
            </div>
            <div class="ms-3">
                <h6 class="mb-0">@Model.Name @Model.Surname</h6>
                <span>Admin</span>
            </div>
        </div>
        <div class="d-flex align-items-center ms-4 mb-4">
            <span><i class="fas fa-pen-alt"></i> Toplam Blog Sayısı: @ViewBag.articlecount</span>
        </div>
        <div class="navbar-nav w-100">
            <a href="/Admin/Dashboard/Index" class="nav-item nav-link"><i class="fa fa-dashboard"></i> Dashboard</a>
            <div class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-laptop"></i> Mesajlar</a>
                @await Component.InvokeAsync("_AdminLayoutSideBarMessageComponentPartial")
            </div>
            <a href="/Admin/Blog/Index" class="nav-item nav-link"><i class="fab fa-blogger"></i> Bloglar</a>
            <a href="/Admin/Author/AuthorIndex" class="nav-item nav-link"><i class="fas fa-pen-nib"></i> Yazarlar</a>
            <a href="/Admin/Author/AdminIndex" class="nav-item nav-link"><i class="fas fa-horse-head"></i> Yöneticiler</a>
            <a href="/Admin/Comment/Index" class="nav-item nav-link"><i class="fas fa-comments"></i> Yorumlar</a>
            <a href="/Admin/Notification/Index" class="nav-item nav-link"><i class="fas fa-exclamation-circle"></i> Bildirimler</a>
            <a href="/Admin/Statistic/Index" class="nav-item nav-link"><i class="fa fa-chart-bar"></i> İstatistikler</a>
            <a href="/Admin/Settings/Index" class="nav-item nav-link"><i class="fas fa-cogs"></i> Ayarlar</a>
            <a href="/Admin/Profile/EditProfile" class="nav-item nav-link"><i class="fas fa-user-edit"></i> Profilim</a>
            <a href="/Login/Logout" class="nav-item nav-link"><i class="fas fa-sign-out-alt"></i> Çıkış</a>
        </div>
    </nav>
</div>
