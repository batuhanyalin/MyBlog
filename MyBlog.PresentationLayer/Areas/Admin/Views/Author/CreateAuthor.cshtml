@model AppUser
@{
    ViewData["Title"] = "CreateAuthor";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <form asp-action="CreateAuthor" asp-controller="Author" asp-area="Admin" method="post" enctype="multipart/form-data">
        <br />
        <h2>Yeni Kullanıcı Ekle</h2>
        <div class="row">
            <div class="col-sm-6 col-xl-6">
                <div class="bg-light rounded h-100 p-4">
                    <input type="hidden" asp-for="UserName" />
                    <input type="hidden" asp-for="ImageUrl" />
                    <div class="mb-3">
                        <label class="form-label">Kullanıcı Adı</label>
                        <input type="text" class="form-control" asp-for="UserName">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Adı</label>
                        <input type="text" class="form-control" asp-for="Name">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Soyadı</label>
                        <input type="text" class="form-control" asp-for="Surname">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Şehir</label>
                        <input type="text" class="form-control" asp-for="City">
                    </div>
                    <div>
                        <label class="form-label">Kullanıcıyı Aktif Et: </label>
                        <input asp-for="IsApproved" type="checkbox" class="form-check-input" />
                        <input type="hidden" asp-for="IsApproved" value="false" />
                    </div>
                
                </div>
            </div>
            <div class="col-sm-6 col-xl-6">
                <div class="bg-light rounded h-100 p-4">
                    <br />
                    <div class="col">
                        <label class="form-label">Görsel Ekle</label>
                        <input type="file" class="form-control" name="Image">
                    </div>
                    <br />
                    <label class="form-label">Kullanıcı Rolü</label>
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="AppRoleId" value="1" id="Role1">
                            <label class="form-check-label" for="Role1">
                                <i class="fas fa-pen-nib"></i> Yazar
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="AppRoleId" value="2" id="Role2">
                            <label class="form-check-label" for="Role2">
                                <i class="fas fa-horse-head"></i> Editör
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="AppRoleId" value="3" id="Role3">
                            <label class="form-check-label" for="Role3">
                                <i class="fas fa-user-shield"></i> Admin
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="bg-light rounded h-200 p-4">
                <h7 class="mb-4">Hakkında</h7>
                <div>
                    <textarea class="form-control" asp-for="About" id="summernote"></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="bg-light rounded h-200 p-4">
                <button class="btn btn-success" type="submit">Güncelle</button>
            </div>
        </div>
        <br />
    </form>
</div>
<script>
    $('#summernote').summernote({
        height: 200,                 // set editor height
        minHeight: null,             // set minimum height of editor
        maxHeight: null,             // set maximum height of editor
        focus: true                  // set focus to editable area after initializing summernote
    });
</script>
