@model List<MyBlog.PresentationLayer.Areas.Admin.Models.CategoryBlogCount>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-light text-center rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">Kategoriye Göre Blog Sayıları</h6>
                    <a href="">Listeyi Göster</a>
                </div>
                <canvas id="worldwide-sales"></canvas>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var ctx1 = document.getElementById('worldwide-sales').getContext('2d');

        // Verileri Razor Model'den al
        var categories = @Html.Raw(Json.Serialize(Model.Select(m => m.Category)));
        var counts = @Html.Raw(Json.Serialize(Model.Select(m => m.Count)));

        var myChart1 = new Chart(ctx1, {
            type: 'bar',
            data: {
                labels: categories,
                datasets: [{
                    label: 'Blog Sayısı',
                    data: counts,
                    backgroundColor: 'rgba(0, 156, 255, .7)'
                }]
            },
            options: {
                responsive: true
            }
        });
    });
</script>
