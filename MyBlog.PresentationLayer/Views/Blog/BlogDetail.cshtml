@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">
@await Component.InvokeAsync("_DefaultHeadComponentPartial")

<body>
    <!-- Page Preloder -->
    <!-- Humberger Begin -->
    @await Component.InvokeAsync("_DefaultSideBarComponentPartial")
    <!-- Humberger End -->
    <!-- Header Section Begin -->
    @await Component.InvokeAsync("_DefaultHeaderComponentPartial")
    <!-- Header Section End -->
    <!-- Single Post Section Begin -->
    <section class="single-post spad">
        <div class="single-post__hero set-bg" data-setbg="/foodeiblog-master/img/categories/single-post/single-post-hero.jpg"></div>
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-8">
                    <div class="single-post__title">
                        <div class="single-post__title__meta">
                            <h2>@ViewBag.createdDateDay</h2>
                            <span>@ViewBag.createdDateMonth</span>
                        </div>
                        <div class="single-post__title__text">
                            <ul class="label">
                                <li>Kategori: @ViewBag.categoryname</li>
                            </ul>
                            <h4>@ViewBag.title</h4>
                            <ul class="widget">
                                <li><a href="/">@ViewBag.username</a></li>
                                <li>@ViewBag.GetReadingTime Dakikalık Okuma Süresi</li>
                                <li>@ViewBag.commentscount Yorum</li>
                            </ul>
                        </div>
                    </div>
                    <div class="single-post__social__item">
                        <ul>
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                            <li><a href="#"><i class="fa fa-youtube-play"></i></a></li>
                        </ul>
                    </div>
                    <div class="single-post__top__text">
                        <p> @ViewBag.detail </p>
                    </div>
                    <div class="single-post__tags">
                        <a href="#">Food</a>
                        <a href="#">Vegan</a>
                        <a href="#">Tomato</a>
                        <a href="#">Weightloss</a>
                    </div>
                    <div class="single-post__next__previous">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <a href="#" class="single-post__previous">
                                    <h6><span class="arrow_carrot-left"></span> Previous posts</h6>
                                    <div class="single-post__previous__meta">
                                        <h4>08</h4>
                                        <span>Aug</span>
                                    </div>
                                    <div class="single-post__previous__text">
                                        <span>Dinner</span>
                                        <h5>The Best Weeknight Baked <br />Potatoes, 3 Creative Ways</h5>
                                    </div>
                                </a>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <a href="#" class="single-post__next">
                                    <h6>Next posts <span class="arrow_carrot-right"></span> </h6>
                                    <div class="single-post__next__meta">
                                        <h4>05</h4>
                                        <span>Aug</span>
                                    </div>
                                    <div class="single-post__next__text">
                                        <span>Smoothie</span>
                                        <h5>The $8 French Rosé I Buy in <br />Bulk Every Summer</h5>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                    <!--Yazar bilgileri-->
                    @await Component.InvokeAsync("_AuthorProfileInfoComponentPartial", new { id = ViewBag.articleId })
                    @await Component.InvokeAsync("_CommentListByBlogComponentPartial", new { id = ViewBag.articleId })
                    <!--Yorum yapma-->
                    <div class="single-post__leave__comment">
                        <div class="widget__title">
                            <h4>Bir Yorum Yap</h4>
                        </div>
                        <form method="post">
                            <div class="input-list">
                                <input type="text" placeholder="İsim">
                                <input type="text" placeholder="Soyisim">
                                <input type="text" placeholder="Konu">
                            </div>
                            <textarea placeholder="Mesajınız"></textarea>
                            <br />
                            <button type="submit" class="site-btn">Gönder</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </section>
    <!-- Single Post Section End -->
    <!-- Footer Section Begin -->
    @await Component.InvokeAsync("_DefaultFooterComponentPartial")
    <!-- Footer Section End -->
    <!-- Search Begin -->
    @await Component.InvokeAsync("_DefaultSearchComponentPartial")
    <!-- Search End -->
    <!-- Js Plugins -->
    @await Component.InvokeAsync("_DefaultJSPluginsComponentPartial")
</body>

</html>