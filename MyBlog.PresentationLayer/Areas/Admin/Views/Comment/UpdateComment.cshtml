@model Comment
@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <form asp-action="UpdateComment" asp-controller="Comment" asp-area="Admin" method="post">
        <br />
        <h2>Yorum Güncelleme</h2>
        <div class="row">
            <div class="col-sm-6 col-xl-6">
                <div class="bg-light rounded h-100 p-4">
                    <input type="hidden" asp-for="CommentId" />
                    <div class="mb-3">
                        <label class="form-label">Adı</label>
                        <input type="text" class="form-control" asp-for="Name">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Soyadı</label>
                        <input type="text" class="form-control" asp-for="Surname">
                    </div>  
                    <div class="mb-3">
                        <label class="form-label">Soyadı</label>
                        <input type="text" class="form-control" asp-for="Email">
                    </div>
                    <div>
                        <label class="form-label">Yorumu Aktif Et: </label>
                        <input asp-for="IsApproved" type="checkbox" class="form-check-input" />
                        <input type="hidden" asp-for="IsApproved" value="false" />
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-6">
                <div class="bg-light rounded h-100 p-4">
                    <div class="mb-3">
                        <label class="form-label">Oluşturulma Tarihi:</label>
                        <label class="form-label">@Model.CreatedDate.ToString("dd.MM.yyy HH:mm:ss")</label>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Yorumun Atıldığı Blog</label>
                        @Html.DropDownListFor(x => x.ArticleId, (List<SelectListItem>)ViewBag.article, new { @class = "form-control" })
                    </div>
                    <div>
                        <br />
                        <div class="col">
                            <label class="form-label">Attığı Toplam Yorum Sayısı:</label>
                            <label class="form-label">@ViewBag.commentscount</label>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="bg-light rounded h-200 p-4">
                    <h7 class="mb-4">İçerik</h7>
                    <div>
                        <textarea class="form-control" asp-for="Description" id="summernote"></textarea>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="bg-light rounded h-200 p-4">
                    <button class="btn btn-success" type="submit">Güncelle</button>
                </div>
            </div>
            <br />
    </form>
</div>
<script>
    $('#summernote').summernote({
        height: 200,                 // set editor height
        minHeight: null,             // set minimum height of editor
        maxHeight: null,             // set maximum height of editor
        focus: true                  // set focus to editable area after initializing summernote
    });
</script>
